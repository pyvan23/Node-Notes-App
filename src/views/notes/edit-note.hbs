<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>
       Edit
      </h3>
    </div>
    <div class="card-body">
      <!--va a enviar el formulario con el metodo PUT-->
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
      <!--valida peticiones como put el midleware methosOverrride-->
      <input type="hidden" name="_method" value="PUT">
        <div class="mt-3">
          <input type="text" name="title" class="form-control" placeholder="title" value="{{note.title}}" autofocus/>
        </div>
        <div class="mt-3">
         <input type="text" name="description" class="form-control" placeholder="description"value="{{note.description}}" autofocus />
        </div>
        <div class="mt-3" >
          <button class="btn btn-primary w-100" type="submit">Save</button>
        </div>

      </form>
    </div>
  </div>
</div>